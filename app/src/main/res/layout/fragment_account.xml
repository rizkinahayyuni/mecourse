<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profile_photo"
            android:src="@drawable/ic_account"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textSize="20sp"
        android:textColor="@color/anchor_navy"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_email_focus"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="15sp"
            android:textColor="@color/anchor_navy"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phone_focus"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@color/anchor_navy"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location_focus"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/txt_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@color/anchor_navy"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="EDIT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semi_bold"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:backgroundTint="#4BC076"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="LOGOUT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semi_bold"
            android:backgroundTint="#EA676D"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            />

    </LinearLayout>
</LinearLayout>